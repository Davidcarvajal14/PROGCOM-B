package Florister√≠a;

public class FloristeriaDavid extends Casa {

    private boolean tieneFlorDecorativa;
    private boolean tieneRiachuelo;
    private boolean tieneNube;
    private boolean tieneTechoConTejas;

    /**
     * Constructor de la clase Florister√≠a David
     * @param color color de las paredes (rosado claro)
     * @param numHabitaciones n√∫mero de habitaciones
     * @param numBanos n√∫mero de ba√±os
     * @param tienePatio si tiene patio
     * @param tieneParqueadero si tiene parqueadero
     * @param tieneFlorDecorativa si tiene flor decorativa en la fachada
     * @param tieneRiachuelo si tiene riachuelo en la parte trasera
     * @param tieneNube si hay nube decorativa en el cielo
     * @param tieneTechoConTejas si el techo tiene l√≠neas de tejas
     */
    public FloristeriaDavid(String color, int numHabitaciones, int numBanos,
                            boolean tienePatio, boolean tieneParqueadero,
                            boolean tieneFlorDecorativa, boolean tieneRiachuelo,
                            boolean tieneNube, boolean tieneTechoConTejas) {

        super(color, numHabitaciones, numBanos, tienePatio, tieneParqueadero);
        this.tieneFlorDecorativa = tieneFlorDecorativa;
        this.tieneRiachuelo = tieneRiachuelo;
        this.tieneNube = tieneNube;
        this.tieneTechoConTejas = tieneTechoConTejas;
    }

    @Override
    public String describir() {
        String descripcion = super.describir();
        descripcion += "\nEsta es la Florister√≠a David, vista desde cinco perspectivas:";

        descripcion += "\n\nüî∏ Vista Frontal:\n- Paredes de color rosado claro con techo triangular caf√©." +
                "\n- Puerta rectangular de color marr√≥n en el centro.";
        if (tieneFlorDecorativa) {
            descripcion += "\n- Cinco flores decorativas en la fachada (roja, azul, p√∫rpura, naranja y rosa).";
        }

        descripcion += "\n\nüî∏ Vista Trasera:\n- Sin elementos visibles en la imagen, pero puede incluir decoraciones adicionales.";
        if (tieneRiachuelo) {
            descripcion += "\n- Riachuelo azul claro serpenteando desde la base.";
        }
        if (tieneNube) {
            descripcion += "\n- Nube gris compuesta por varios c√≠rculos flotando en el cielo.";
        }

        descripcion += "\n\nüî∏ Vista Lateral Izquierda:\n- Muro sin decoraciones visibles.";

        descripcion += "\n\nüî∏ Vista Lateral Derecha:\n- Muro similar al izquierdo.";

        descripcion += "\n\nüî∏ Vista Superior:\n- Techo triangular caf√©.";
        if (tieneTechoConTejas) {
            descripcion += "\n- L√≠neas grises verticales que simulan tejas.";
        }

        return descripcion;
    }
}

